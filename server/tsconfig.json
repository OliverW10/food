{
  "compilerOptions": {
    "target": "ES2021",
    // Use ESNext module so Jest (with ts-jest useESM) and runtime can handle ESM imports from deps like superjson
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
  "outDir": "dist",
  "types": ["node", "jest"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}